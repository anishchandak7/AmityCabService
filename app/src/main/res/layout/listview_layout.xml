<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/background_2">

        <ImageView
            android:id="@+id/profileimage"
            android:layout_width="101dp"
            android:layout_height="82dp"
            android:paddingTop="10dp"
            app:srcCompat="@drawable/profile_pic" />

        <TextView
            android:id="@+id/drivername"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/profileimage"
            android:paddingLeft="20dp"
            android:text="Driver Name"
            android:textColor="@color/com_parse_ui_facebook_login_button_push"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/driverexp"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/drivername"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:text="Driver's Experience in years"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Seats_avail"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/driverexp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="20dp"
            android:text="Available seats :"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>
